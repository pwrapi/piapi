#!/usr/bin/perl -w

use strict;

my $start = shift;
    defined($start) or die "Must provide first client in range\n";
my $fin = shift;
    defined($fin) or die "Must provide last client in range\n";
my $interval;
$interval = shift or do {
    !defined($interval) and $interval = 1;
};

print "starting clients on teller-pm$start through teller-pm$fin " .
      "interval $interval\n";

my $ret;
for my $num ($start..$fin) {
    if ($num < 10) { $num = "0" . $num; }
    system("ssh teller-pm$num ./client_start $interval &");
}
sleep(2);
