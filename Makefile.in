PREFIX = @prefix@
DBG ?= n
LVL ?= 1
XC ?= n
SPI ?= n
CNT ?= n

ifeq ($(XC),y)
CROSS_COMPILE = arm-linux-gnueabihf-
SPI = y
endif

CC = $(CROSS_COMPILE)gcc
AR = $(CROSS_COMPILE)ar
CFLAGS = -Wall -O0 -pthread

ifeq ($(DBG),y)
CFLAGS += -g
ifeq ($(LVL),0)
CFLAGS += -DPIAPI_DEBUG
endif
ifeq ($(LVL),1)
CFLAGS += -DPIAPI_PROXY_DEBUG -DPIAPI_AGENT_DEBUG
endif
ifeq ($(LVL),2)
CFLAGS += -DPIAPI_PROXY_DEBUG -DPIAPI_AGENT_DEBUG -DPIAPI_NATIVE_DEBUG
endif
endif

ifeq ($(SPI),y)
CFLAGS += -DPIAPI_SPI
endif

ifeq ($(CNT),y)
CFLAGS += -DPIAPI_COUNTERS
endif

TARGET = getRawPower
LIBNAME = piapi

TESTOBJS = $(TARGET).o
STATICLIB = lib$(LIBNAME).a
OBJS = 	piapi.o     \
	piproxy.o   \
	piagent.o   \
	pinative.o  \
	piutil.o    \
	proxy.o     \
	agent.o     \
	native.o    \
	test.o      \
	$(TARGET).o

ifeq ($(SPI),y)
OBJS +=	pidev.o
endif

all: lib $(TESTOBJS)
	$(CC) $(CFLAGS) $(TESTOBJS) -L. -l$(LIBNAME) -o $(TARGET)
	$(CC) $(CFLAGS) proxy.o -L. -l$(LIBNAME) -o piproxy 
	$(CC) $(CFLAGS) agent.o -L. -l$(LIBNAME) -o piagent 
	$(CC) $(CFLAGS) native.o -L. -l$(LIBNAME) -o pinative
	$(CC) $(CFLAGS) test.o -L. -l$(LIBNAME) -o pitest

clean:
	rm -f out/* $(TARGET) piproxy piagent pinative pitest $(STATICLIB) $(OBJS)

lib: $(OBJS)
	$(AR) rcs $(STATICLIB) $(OBJS)
	
install:
	mkdir -p $(PREFIX)
	mkdir -p $(PREFIX)/include
	cp picommon.h piapi.h $(PREFIX)/include
	mkdir -p $(PREFIX)/lib
	cp libpiapi.a $(PREFIX)/lib
	mkdir -p $(PREFIX)/bin
	cp $(TARGET) piproxy piagent pinative pilogger pimon pitest .config $(PREFIX)/bin
	cp -R script $(PREFIX)/script
